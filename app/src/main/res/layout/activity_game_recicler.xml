<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.GameToSaleActivity">

    <TextView
        android:id="@+id/tittle_gamesToSale"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="30sp"
        android:textStyle="bold"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/juegos_en_venta" >

    </TextView>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:src="@drawable/ic_shop"
        app:layout_constraintStart_toStartOf="@id/tittle_gamesToSale"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:tint="@color/white"
        app:layout_constraintVertical_bias="0.30"
        app:layout_constraintEnd_toEndOf="@id/tittle_gamesToSale"
        app:layout_constraintBottom_toTopOf="@id/reciclerViewGame"

        android:contentDescription="@string/imagen_de_carrito_de_compras" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginHorizontal="15dp"
        android:id="@+id/reciclerViewGame"
        android:layout_width="match_parent"
        android:layout_height="660dp"
        android:layout_marginVertical="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tittle_gamesToSale"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


    </androidx.recyclerview.widget.RecyclerView>

</androidx.constraintlayout.widget.ConstraintLayout>