<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="15dp"
    android:layout_marginHorizontal="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_pruchase_of_user"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

     <TextView
         android:layout_marginStart="12dp"
         android:id="@+id/tv_price_purchase_of_user"
         tools:text="Precio"
         android:textStyle="bold"
         android:textSize="20sp"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         app:layout_constraintTop_toTopOf="@id/cl_pruchase_of_user"
         app:layout_constraintStart_toStartOf="@id/cl_pruchase_of_user"
         app:layout_constraintBottom_toBottomOf="@id/cl_pruchase_of_user"
         />

      <TextView
          android:id="@+id/tv_date_purchase"
          tools:text="fecha"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginBottom="10dp"
          android:textSize="18sp"
          app:layout_constraintEnd_toEndOf="@id/cl_pruchase_of_user"
          app:layout_constraintBottom_toBottomOf="@id/cl_pruchase_of_user"
          android:layout_marginEnd="20dp"
          />



    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>

